<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEventos.login"
             Title="login">
    <VerticalStackLayout VerticalOptions="Center" Spacing="10" Padding="10">
        
        <Label 
            Text="SISTEMA DE EVENTOS"
            TextColor="BlueViolet"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label Text="Usuarios" TextColor="BlueViolet"/>
        <Entry x:Name="txt_usuarios"/>

        <Label Text="Senha" TextColor="BlueViolet"/>
        <Entry x:Name="txt_senhas" IsPassword="true"/>

        <Button Text="Entrar" Clicked="Button_Clicked" BackgroundColor="LightGray" TextColor="BlueViolet"/>

    </VerticalStackLayout>
</ContentPage>